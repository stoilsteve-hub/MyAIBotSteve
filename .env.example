API_KEY=your_key
API_SECRET=your_secret
BASE_URL=https://api.binance.com

# Trading
SYMBOL=ETHEUR
TRADE_VALUE_USDT=10.0
BUY_DROP_PCT=0.01
TAKE_PROFIT_PCT=0.012
STOP_LOSS_PCT=0.02

# Safety
MAX_DAILY_LOSS_USDT=2.0
MAX_TRADES_PER_DAY=10
ERROR_LIMIT=5
ERROR_WINDOW_SECONDS=600
COOLDOWN_SECONDS=120
LOOP_INTERVAL_SECONDS=15
TIMEZONE=Europe/Stockholm

# Market Safety
MAX_SPREAD_PCT=0.003
MAX_SLIPPAGE_PCT=0.005
MIN_NOTIONAL_BUFFER=1.05

# Execution Safety
DRY_RUN=1
REQUIRE_START_CONFIRM=1
LIVE_TRADING=NO

# Option 2.1: Reversal Gate
TREND_MODE=REVERSAL          # STRICT (Old) or REVERSAL (New)
REVERSAL_MODE=BOUNCE3        # CROSSUP or BOUNCE3
REVERSAL_SAMPLES=3           # Samples to confirm reversal
TREND_BLOCK_COOLDOWN_SECONDS=300 # Wait 5m if trend check fails
MIN_TREND_SPREAD_PCT=0.0     # Buffer for trend check

# Option 2: Limit Orders & Basic Trend
LIMIT_OFFSET_PCT=0.001       # 0.1% price offset for Limit Orders
ORDER_TIMEOUT_SECONDS=60     # Wait 60s for order fill
TREND_WINDOW_SAMPLES=60      # SMA window (60 * 15s = 15 mins)
TREND_MIN_SAMPLES=30         # Samples needed to start trading
MIN_FILL_QUOTE=5.0           # Minimum executed value to flip state (e.g. 5 EUR)
